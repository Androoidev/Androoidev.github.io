---
import { Code } from 'astro:components';

const code = `data class Developer(
    val name: String,
    val skills: List<String>,
    val interests: List<String>
)

data class TechStack(
    val android: List<String>,
    val ui: List<String>,
    val backend: List<String>
)

enum class ContactType {
    GITHUB, LINKEDIN, EMAIL
}

val techStack = TechStack(
    android = listOf(
        "Kotlin",
        "Jetpack Compose",
        "Android SDK",
        "Room Database",
        "Hilt"
    ),
    ui = listOf(
        "XML",
        "Material Design",
        "Jetpack Compose",
    ),
    backend = listOf(
        "Firebase",
        "Ktor"
    )
)

val me = Developer(
    name = "Luis",
    skills = techStack.android + techStack.ui + techStack.backend,
    interests = listOf(
        "Mobile Development",
        "Open Source",
        "UI/UX Design",
        "Performance Optimization",
        "MVVM"
    )
)

fun getContactUrl(type: ContactType): String {
    return when (type) {
        ContactType.GITHUB -> "https://github.com/Androoidev"
        ContactType.LINKEDIN -> "https://linkedin.com/in/tu_perfil"
        ContactType.EMAIL -> "luiszenteno.dev@gmail.com"
        else -> "No disponible"
    }
}
`;
---

<Code
    code={code}
    lang="kotlin"
    wrap={true}
/>

<style is:global>

    /* Estilos personalizados para el código */
    pre.astro-code {
        @apply bg-gray-900 text-white p-4 rounded-lg overflow-auto !important;
        counter-reset: line;
    }

    pre.astro-code code {
        @apply block font-mono;
    }

    pre.astro-code code .line {
        @apply relative;
        counter-increment: line;
        padding-left: 2.5em; /* Espacio para los números */
    }


    pre.astro-code code .line::before {
        content: counter(line);
        @apply absolute left-0 top-0 pl-3 text-gray-500;
    }

</style>
